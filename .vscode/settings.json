{
    "python.linting.pylintArgs": [
        "--errors-only,--unsafe-load-any-extension=y"
    ],
    "python.pythonPath": "${workspaceFolder}\\env\\Scripts\\python.exe",

    "editor.detectIndentation": false,
    "editor.tabSize":4,
    "editor.insertSpaces": true,
    //these are just my preferences
    "files.exclude": {
        "env": true,
        "*.spec":true,
        ".gitattributes":true,
        ".gitmodules":true,
        "LICENSE":true,
        "**/__pycache__":true,
    }
}